
  <form action="/" method="POST" id="url-form" novalidate>
    <div class="container mt-5">
      <div class="d-flex justify-content-center">
        <input type="text" class="form-control" style="" placeholder="Please paste related URL" aria-label="Recipient's username" aria-describedby="button-addon2" name="url" value="{{ url }}">
        <button class="btn btn-primary" type="save" id="transfer">Transfer</button>
      </div>
    </div>
  </form>
  <div></div>

  {{#if newUrl}}
  <div class="mt-3 d-flex justify-content-center">
    <h2 style="display:inline-block">Your reurl is here: <a href="{{ url }}" target="_blank" id="reurlResult">{{newUrl}}</a></h2>
    <a tabindex="0" class="btn btn-sm mb-2 ms-2" role="button" data-bs-toggle="popover" data-bs-trigger="focus" data-bs-content="Copied" data-bs-placement="top">
      <span id="copyIcon"><i class="fa-duotone fa-copy fa-xl"></i>Copy</span>
    </a>
  </div>
  {{/if}}

